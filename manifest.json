// manifest.json

{
  "manifest_version": 2,
  "name": "Nuance",
  "version": "1.0",
  "description": "Platform Independent Text Editor",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"],
  "web_accessible_resources": [
    "popup.css"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":"logo.png"
  }
}
